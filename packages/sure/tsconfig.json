{
  "compilerOptions": {
    "noErrorTruncation": true,

    "rootDir": "src",
    "outDir": "esm",

    // Add .d.ts files beside the .ts so @typescript/ata works when loading types
    "declaration": true,
    "declarationMap": true
  },
  "extends": "tsconfig/base-esm.json",
  "include": ["src"],
  "exclude": ["prod", "node_modules"]
}
